<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <changeSet id="18" author="isaul">

        <addColumn tableName="akl_team">
            <column name="captain_id" type="bigint"/>
        </addColumn>

        <sql dbms="mysql,h2,postgresql,oracle"
             endDelimiter="\nGO"
             splitStatements="true"
             stripComments="true">
            UPDATE akl_team
            SET captain_id =
                (SELECT id
                FROM AKL_USER
                WHERE AKL_USER.captain_id = akl_team.id)
        </sql>

        <createTable tableName="akl_team_user">
            <column name="team_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <sql dbms="mysql,h2,postgresql,oracle"
             endDelimiter="\nGO"
             splitStatements="true"
             stripComments="true">
            UPDATE akl_team
            SET captain_id =
                (SELECT id
                FROM AKL_USER
                WHERE AKL_USER.captain_id = akl_team.id)
        </sql>

        <sql dbms="mysql,h2,postgresql,oracle"
             endDelimiter="\nGO"
             splitStatements="true"
             stripComments="true">
            INSERT INTO akl_team_user (team_id, user_id)
            SELECT captain_id, id
            FROM akl_user
            WHERE captain_id IS NOT NULL
        </sql>

        <sql dbms="mysql,h2,postgresql,oracle"
             endDelimiter="\nGO"
             splitStatements="true"
             stripComments="true">
            INSERT INTO akl_team_user (team_id, user_id)
            SELECT member_id, id
            FROM akl_user
            WHERE member_id IS NOT NULL
        </sql>

        <sql dbms="mysql,h2,postgresql,oracle"
             endDelimiter="\nGO"
             splitStatements="true"
             stripComments="true">
            INSERT INTO akl_team_user (team_id, user_id)
            SELECT standin_id, id
            FROM akl_user
            WHERE standin_id IS NOT NULL
        </sql>

    </changeSet>
</databaseChangeLog>
