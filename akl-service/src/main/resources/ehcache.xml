<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         name="CM1"
         updateCheck="false"
         maxBytesLocalHeap="16M">

    <diskStore path="java.io.tmpdir"/>

    <defaultCache overflowToDisk="false"/>

    <cache name="twitch" timeToLiveSeconds="60"/>

    <cache name="steamUser" timeToLiveSeconds="3600"/>

    <cache name="steamUserStats" timeToLiveSeconds="3600"/>

    <cache name="com.pyrenty.akl.domain.User"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.pyrenty.akl.domain.Authority"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.pyrenty.akl.domain.User.authorities"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.pyrenty.akl.domain.PersistentToken"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.pyrenty.akl.domain.User.persistentTokens"
           timeToLiveSeconds="3600">
    </cache>
</ehcache>
